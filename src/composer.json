{
    "name": "kapweb/cda_v3",
    "type": "project",
    "authors": [
        {
            "name": "Damien RICHARD"
        }
    ],
    "optimize-autoloader": true,
    "autoload": {
        "psr-4": {
            "App\\Controller\\":"App/Controller/",
            "App\\Model\\":"App/Model/",
            "Projects\\":"Projects/",
            "Tests\\":"tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "nikic/fast-route": "^1.3",
        "smarty/smarty": "^5.6"
    },
    "require-dev": {
        "pestphp/pest": "^3.0"
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
